<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="71dp">

        <ImageView
            android:id="@+id/imageViewBucket"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bucket" />

        <TextView
            android:id="@+id/textViewBucketName"
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageViewBucket"
            />

        <TextView
            android:id="@+id/textViewBucketDate"
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:layout_below="@+id/textViewBucketName"
            android:layout_toRightOf="@+id/imageViewBucket"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="-21dp"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>